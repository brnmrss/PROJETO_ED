Funcionario novoFuncionario;

                                system("cls"); // Limpa a tela
                                cout << "\nCadastro de Funcionário\n";
                                cout << "Nome: ";
                                cin.ignore(); // Limpa o buffer do teclado
                                cin.getline(novoFuncionario.nome, 50);
