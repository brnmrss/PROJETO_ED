// CONSULTA E RESERVA DE ARMÁRIOS
#include <iostream>
#include <string.h>
#include <stdlib.h>
#include <stdio.h>
#include <cstring>

#define ALUNO   20
#define FUNCIONARIO 10
#define ARMARIO 25
#define CURSO 5
using namespace std;


typedef struct
{
    int dataInicio, dataFim, ano;
} AlunoCurso;

typedef struct
{
    char nome[], email[];
    int matricula, fone, turmaSerie;
} Aluno;

typedef struct
{
    int codigo, dataRec, dataDev;
} Reserva;

typedef struct
{
    char nome[50], usuario[50], email[50];
    int matricula, senha, fone;
} Funcionario;

typedef struct
{
    char estado[], disponivel[];
    int numero;
} Armario;

typedef struct
{
    char nome[];
    int codigo;
} Curso;

AlunoCurso AluCurso[ALUNO];
Aluno Alu[ALUNO];
Reserva Res[ARMARIO];
Funcionario Fun[FUNCIONARIO];
Armario Arm[ARMARIO];
Curso Crs[CURSO];

int countFun=0;

void cadastrarFuncionario(int &countFun) {
    if (countFun < FUNCIONARIO) {
        cout << "Cadastro de Funcionário:" << endl;
        cout << "Nome: ";
        cin >> Fun[countFun].nome;
        cout << "Usuário: ";
        cin >> Fun[countFun].usuario;
        cout << "Email: ";
        cin >> Fun[countFun].email;
        cout << "Matrícula: ";
        cin >> Fun[countFun].matricula;
        cout << "Senha: ";
        cin >> Fun[countFun].senha;
        cout << "Telefone: ";
        cin >> Fun[countFun].fone;

        cout << "Funcionário cadastrado com sucesso!" << endl;
        countFun++;
    } else {
        cout << "Limite de funcionários atingido." << endl;
    }
}

int main()
{
    setlocale(LC_ALL, "Portuguese");
    int opInicio,menuOp = 1;
    int opMenu, opFechar, count = 0, codigo = 0; // a variável count irá representar a quantidade de registros já armazenados
    int opArm, numEdit, codigoDel;
    int opAlu, alunoEdit, alunoDel;
    int opFun, funEdit, funDel;

    cout << "Bem-vindo! Escolha uma opcao:" << endl;
    while (menuOp == 1) {
        cout << "1. Entrar" << endl;
        cout << "2. Cadastrar" << endl;
        cout << "3. Sair" << endl;
        cout << "-> ";
        cin >> opInicio;

        switch (opInicio) {
            case 1:
                system("cls");
                cout << "Voce escolheu Entrar." << endl;
                break;
            case 2:
                system("cls");
                cout << "Voce escolheu Cadastrar." << endl;
                cadastrarFuncionario(countFun);
                break;
            case 3:
                system("cls");
                for (int i=0;i<FUNCIONARIO ;i++ ){
                    cout << Fun[i].nome << Fun[i].matricula;
                }

                break;
            default:
                system("cls");
                cout << "Opcao invalida. Escolha novamente." << endl;
                break;
        }
    }

    return 0;
}
